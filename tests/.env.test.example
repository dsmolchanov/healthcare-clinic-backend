# Test Environment Configuration
# Copy this file to .env.test and update with your test values

# Twilio Test Configuration
TWILIO_ACCOUNT_SID=ACtest_account_sid_for_testing
TWILIO_AUTH_TOKEN=test_auth_token_for_webhook_validation
WHATSAPP_NUMBER=+14155238886  # Twilio Sandbox number

# Redis Configuration (for session tests)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1  # Use different DB for tests
REDIS_PASSWORD=  # Leave empty for local Redis

# Database Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=test_anon_key_for_testing
SUPABASE_SERVICE_KEY=test_service_key_for_admin_ops

# Test Database (PostgreSQL)
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/dental_clinic_test

# API Keys (use test keys)
OPENAI_API_KEY=sk-test-key-not-real
DEEPGRAM_API_KEY=test-deepgram-key
CARTESIA_API_KEY=test-cartesia-key

# Market Configuration
MARKET=mexico
ENCRYPTION_LEVEL=basic
AUDIT_ENABLED=true
PHI_PROTECTION=false  # Not needed for Mexico

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Session Configuration
SESSION_TTL_SECONDS=86400  # 24 hours
SESSION_STORAGE=redis  # or 'memory' for testing without Redis

# Privacy Configuration
PRIVACY_NOTICE_VERSION=1.0
CONSENT_REQUIRED=true
DATA_RETENTION_YEARS=5

# Business Hours (Mexico City timezone)
DEFAULT_TIMEZONE=America/Mexico_City

# Test Mode
TEST_MODE=true
DEBUG=true
LOG_LEVEL=DEBUG

# Mock External Services
MOCK_TWILIO=true
MOCK_OPENAI=true
MOCK_CALENDAR=true

# Performance Testing
LOAD_TEST_USERS=50
LOAD_TEST_DURATION=30
MAX_RESPONSE_TIME_MS=500

# Test Clinic Configuration
TEST_CLINIC_ID=test-clinic-001
TEST_CLINIC_NAME=Test Dental Clinic
TEST_CLINIC_WEBSITE=https://testclinic.mx
TEST_CLINIC_MAX_APPOINTMENTS_PER_SLOT=2

# Test Phone Numbers (Mexican format)
TEST_PATIENT_PHONE=+521234567890
TEST_CLINIC_PHONE=+529876543210

# Webhook URLs (for testing)
WEBHOOK_BASE_URL=http://localhost:8000
TWILIO_STATUS_CALLBACK_URL=http://localhost:8000/webhooks/status

# Feature Flags
ENABLE_WHATSAPP=true
ENABLE_SMS=false
ENABLE_VOICE=false
ENABLE_EMAIL=false

# Language Settings
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en

# Appointment Settings
MIN_APPOINTMENT_NOTICE_HOURS=24
MAX_ADVANCE_BOOKING_DAYS=30
APPOINTMENT_DURATION_MINUTES=60
REMINDER_HOURS_BEFORE=24,2  # 24 hours and 2 hours before

# Security Settings
ENABLE_WEBHOOK_SIGNATURE=true
ENABLE_ENCRYPTION=true
HASH_SALT=test_salt_for_hashing_do_not_use_in_production
